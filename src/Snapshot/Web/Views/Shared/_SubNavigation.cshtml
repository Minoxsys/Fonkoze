
<script type="text/javascript">
    window.res.header.subnavigation.buttonTabs = {
        id: 'ButtonTabs',
        group: 'AdministrationButtonsGroup',
        outpost: 'OutpostAdministration',
        product: 'ProductAdministration',
        user: 'UserAdministration',
        campaign: 'CampaignAdministration'
    };

    Ext.onReady(function () {
        var subNavRes = window.res.header.subnavigation;
        var subnav = Ext.getCmp(subNavRes.id);
        subnav.add([
            {
                xtype: 'container',
                id: subNavRes.buttonTabs.id,
                margin: 0,
                padding: 0,
                width: 500,
                layout: {
                    align: 'stretch',
                    padding: 0,
                    type: 'vbox'
                },
                items: [
                    {
                        xtype: 'container',
                        flex: 1,
                        items: [
                            { 
                                xtype: 'label', 
                                html: '&nbsp;' 
                            }
                        ]
                    },{
                        xtype: 'container',
                        layout: {
                            type: 'column'
                        },
                        flex: 1,
                        items: [
                            {
                                xtype: 'button',
                                id: subNavRes.buttonTabs.outpost,
                                toggleGroup: subNavRes.buttonTabs.group,
                                enableToggle: true,
                                pressed: true,
                                text: 'Location Administration',
                                handler:function(){
                                    navigateTo(res.link.administration); 
                                }
                            },{
                                xtype: 'button',
                                id: subNavRes.buttonTabs.product,
                                toggleGroup: subNavRes.buttonTabs.group,
                                enableToggle: true,
                                text: 'Product Administration',
                                handler:function(){
                                    navigateTo(res.link.productGroup); 
                                }
                            },
                            {
                                xtype: 'button',
                                id: subNavRes.buttonTabs.user,
                                toggleGroup: subNavRes.buttonTabs.group,
                                enableToggle: true,
                                text: 'User Administration',
                                handler:function(){
                                    navigateTo(res.link.clientsOverview); 
                                }
                            },{
                                xtype: 'button',
                                id: subNavRes.buttonTabs.campaign,
                                toggleGroup: subNavRes.buttonTabs.group,
                                enableToggle: true,
                                text: 'Campaign Administration',
                                handler:function(){
                                    navigateTo(res.link.campaignOverview); 
                                }
                            }
                        ]
                    }
                ]
            },{
                xtype: 'container',
                id: 'userInfo',
                flex: 2,
                layout: {
                    align: 'stretch',
                    type: 'vbox'
                },
                items: [
                    {
                        xtype: 'container',
                        flex: 1,
                        layout: {
                            align: 'stretch',
                            pack: 'end',
                            type: 'hbox'
                        },
                        items: [
                            {
                                xtype: 'container',
                                width: 380,
                                layout: {
                                    align: 'stretch',
                                    type: 'vbox'
                                },
                                items: [
                                    {
                                        xtype: 'label',
                                        style:'text-align:right;',  
                                        margin: '10, 20, 10, 0',
                                        text: 'Anothony Wolf (UNICEF)' 
                                    },{
                                        xtype: 'container',
                                        style:'text-align:right;', 
                                        items: [
                                            {
                                                xtype: 'label', 
                                                margin: '0, 20, 0, 0',
                                                text: 'Help'
                                            },{
                                                xtype: 'label', 
                                                margin: '0, 20, 0, 0',
                                                text: 'Account Options' 
                                            },{
                                                xtype: 'label', 
                                                text: 'Log Out (L)',
                                                margin: '0, 20, 0, 0',
                                                autoEl: {tag: 'a', href: '@Url.RouteUrl(Web.Bootstrap.Routes.DefaultRouteRegistrar.DEFAULT_ROUTE, new { controller = "Account", action = "LogOff" })'}
                                            }
                                        ]
                                    }
                                ]
                            },{
                                xtype: 'container',
                                itemId: 'userPhoto',
                                width: 80,
                                items: [
                                    { 
                                        xtype: 'image',
                                        src: '@(Url.RouteUrl<Web.Controllers.AssetsController>(_ => _.Shared("img/Users/user.png"), Web.Bootstrap.Routes.AssetRoutesRegistrar.SHARED))',
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]);
                        
        subnav.ownerCt.doLayout();

    });
</script>