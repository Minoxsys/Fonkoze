@model Web.Models.EmailRequest.EmailCreateModel

@using Microsoft.Web.Mvc

@section page_title{
Email Request : Create
}
@section breadcrumbs{
    > Create request
}
@section master_content{
    <form class="chosen-form"  method="post" id="EmailRequestForm">
        <fieldset class="fieldsCollection ">
            <div class="row of-2">
                <div class="column">
                    <label for="Outpost">Outposts</label>
                    @Html.DropDownListFor(m => m.Outpost.Id, Model.Outposts)
                </div>
                <div class="column">
                    <label for="Grup Products">Product Groups</label>
                    @Html.DropDownListFor(m => m.ProductGroup.Id, Model.ProductGroups)
                </div>
            </div>
        </fieldset>
         @Html.SubmitButton("submit-form", "Save") <span>or </span><a href="@(Html.BuildUrlFromExpression<EmailRequestController>(it => it.Overview()))">Cancel</a>
    </form>
}
