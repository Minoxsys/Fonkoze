@section page_title{
    Outpost Management: Overview
}
<script type="text/javascript">
    window.res.content.maincontent = {
        id: 'MainContent',
        sidebar: {
            id: 'SideBar',
            group: 'SideBarGroup',
            outpostStockLevelCurrent: 'Sidebar-current',
            outpostStockLevelHistorical: 'Sidebar-historical'
        }        
    };
    Ext.onReady(function () {

        var contentRes = window.res.content;

        var content = Ext.getCmp(contentRes.id);

        content.add(
            {
                xtype: 'container',
                layout: {
                    align: 'stretch',
                    type: 'hbox'
                },
                items: [
                     {
                         xtype: 'container',
                         id: contentRes.maincontent.id,
                         layout: {
                             align: 'stretch',
                             type: 'fit'
                         },
                         flex: 1
                     },{
                        xtype: 'container',
                        id: 'SideBar',
                        width: 230,
                        layout: {
                            align: 'stretch',
                            type: 'vbox'
                        },
                        items: [
                            {
                                xtype: 'button',
                                id: contentRes.maincontent.sidebar.outpostStockLevelCurrent,
                                toggleGroup: contentRes.maincontent.sidebar.group,
                                enableToggle: true,
                                margin: '45 20 0 0',
                                height: 30,
                                ui: 'snapshot-sidebar-btn',
                                text: 'Current Product Status',
                                handler: function () {
                                    navigateTo(window.res.link.outpostStockLevelCurrent);
                                }
                            },
                            {
                                xtype: 'button',
                                id: contentRes.maincontent.sidebar.outpostStockLevelHistorical,
                                toggleGroup: contentRes.maincontent.sidebar.group,
                                text: 'Historical Product Status',
                                margin: '0 20 0 0',
                                height: 30,
                                ui: 'snapshot-sidebar-btn',
                                enableToggle: true,
                                handler: function () {
                                    navigateTo(window.res.link.historicalLevel);
                                }
                                
                            }
                        ]
                    }
                ]

            }
        );

    });
</script>
