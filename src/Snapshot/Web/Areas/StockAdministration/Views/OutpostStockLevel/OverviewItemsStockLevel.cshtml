@model Web.Areas.StockAdministration.Models.OutpostStockLevel.OutpostList
           @{bool EditAreComminFromFilterByAllOutposts = Model.Outposts.Count > 1;}
      
<div id="stocklevel-overview">

    @foreach (var item in Model.Outposts)
    {    <div>     <br />
            <label for="OutpostName" class="big-text">
                <b>- Outpost Name</b> @item.Name
                <button onclick="ViewHistoricalStockLevelButtonClicked('@item.Id')">
                    View Historical Product Stock Level</button></label>
            <br />
            @if ((item.StockGroups.Count == 0) && (item.Name != null))
            { <label>
                There are no product groups for products from this outpost!
            </label>}
            @foreach (var stockGroup in item.StockGroups)
            {
                <label for="StockGroupName" class="big-text">
                    <b>- @stockGroup.Name</b></label>
    
                <table>
                    <thead>
                        <tr>
                            <th>
                                Product
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Product Stock Level
                            </th>
                            <th>
                                SMS Reference Code
                            </th>
                            <th>
                                Last Update At
                            </th>
                            <th>
                                Update Method
                            </th>
                            <th>
                                Previous Stock Level
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                var itemNo = 0;
                        }
                        @foreach (var stockItem in stockGroup.StockItems)
                        {
                            var _class = (itemNo % 2 == 0) ? "odd" : "even";    
                            <tr class="@_class">
                                <td>@stockItem.Name
                                </td>
                                <td>
                                    @stockItem.Description
                                </td>
                                <td>@stockItem.StockLevel
                                </td>
                                <td>@stockItem.SMSReferenceCode
                                </td>
                                <td>
                                    @stockItem.LastUpdateAt
                                </td>
                                <td>
                                    @stockItem.UpdateMethod
                                </td>
                                <td>
                                    @stockItem.PreviousStockLevel
                                </td>
                                <td>
                                    @(Html.ActionLink<OutpostStockLevelController>(it => it.EditCurrentProductLevel(stockItem.OutpostStockLevelId, EditAreComminFromFilterByAllOutposts), "Edit", StockAdministrationAreaRegistration.DEFAULT_ROUTE))
                                </td>
                            </tr> 
                        }
                    </tbody>
                </table>
 
            }
        </div>
    }
</div>
