@model Web.Areas.StockAdministration.Models.OutpostStockLevel.OutpostList
<div id="stocklevel-overview">
 @foreach (var item in Model.Outposts)
 {           
<div>
    <label for="OutpostName" class="big-text">
        <b> <img alt="minus" src="~/Assets/img/minus.png" /> </b> @item.Name</label> <br />
        @if ((item.StockGroups.Count == 0) && (item.Name != null))
        { <label > There are no product groups for products from this outpost! </label>}
    @foreach (var stockGroup in item.StockGroups)
    {
        <label for="StockGroupName" class="big-text"><b><img alt="minus" src="~/Assets/img/minus.png" /> @stockGroup.Name</b></label>
    
        <table>
            <thead>
                <tr>
                    <th>
                        Stock Item
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Stock Level
                    </th>
                    <th>
                        SMS Reference Code
                    </th>
                    <th>
                        Last Update At
                    </th>
                    <th>
                        Update Method
                    </th>
                    <th>
                        Previous Stock Level
                    </th>
                    <th colspan="2">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
        var itemNo = 0;
                }
                @foreach (var stockItem in stockGroup.StockItems)
                {
                    var _class = (itemNo % 2 == 0) ? "odd" : "even";    
                    <tr class="@_class">
                        <td>@stockItem.Name
                        </td>
                        <td>
                            @stockItem.Description
                        </td>
                        <td>@stockItem.StockLevel
                        </td>
                        <td>@stockItem.SMSReferenceCode
                        </td>
                        <td>
                           @stockItem.LastUpdateAt
                        </td>
                        <td>
                            @stockItem.UpdateMethod
                        </td>
                        <td>
                            @stockItem.PreviousStockLevel
                        </td>
                        <td>
                             @(Html.ActionLink<OutpostStockLevelController>(it => it.EditCurrentProductLevel(stockItem.OutpostStockLevelId,false), "Edit",StockAdministrationAreaRegistration.DEFAULT_ROUTE))
                        </td>
                        <td> View Hystorical</td>
                    </tr> 
                }
            </tbody>
        </table>
 
    }
       </div>
 }
 </div>