@using Web.Areas.OutpostManagement.Models.StockLevel

@model OutpostStockLevelOutputModel
          
 <div id="products-overview">          

                <div id="products-overview">
                    <table name="ProductsTable" id="ProductsTableId">
                        <thead>
                            <tr>
                                <th></th>
                                <th  class="sort-alpha">
                                    Product Name
                                </th>
                                <th>
                                    SMS Reference Code
                                </th>
                                <th>
                                    Selected
                               </th>
                            </tr>
                        </thead>
                        <tbody>
                
                            @for (int i = 0; i < Model.Products.Count; i++ )
                            {
                                //var product = Model.Products[i];
                                var _class = (i % 2 == 0) ? "odd" : "even";
        
                               <tr>
                                    <td>@Html.HiddenFor(m => m.Products[i].ProductId)
                                    </td>
                                    <td>@Html.DisplayFor(m => m.Products[i].ProductName)
                                    </td>
                                    <td>@Html.DisplayFor(m => m.Products[i].ProdSmsRef)
                                    </td>
                                    <td>@Html.CheckBoxFor(m => m.Products[i].Selected)
                                    </td>
                                </tr> 
                            }
                        </tbody>
                </table>
            </div>
</div>


@section scripts{
    <script type="text/javascript">


    </script>
}

