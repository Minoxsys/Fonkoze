<script type="text/javascript">
    window.res.content.maincontent = {
        id: 'MainContent',
        sidebar: {
            id: 'SideBar',
            group: 'SideBarGroup',
            country: 'Country',
            region: 'Region',
            district: 'District',
            outpost: 'Outpost'
        }
    };

    window.res.link.country = '@(Url.RouteUrl<CountryController>( x=>x.Overview() ,  OutpostManagementAreaRegistration.DEFAULT_ROUTE ))';
    window.res.link.district = '@(Url.RouteUrl<DistrictController>( x=>x.Overview() ,  OutpostManagementAreaRegistration.DEFAULT_ROUTE ))';
    Ext.onReady(function () {

        var contentRes = window.res.content;

        var content = Ext.getCmp(contentRes.id);

        content.add(
            {
                xtype: 'container',
                layout: {
                    align: 'stretch',
                    type: 'hbox'
                },
                items: [
                     {
                         xtype: 'container',
                         id: contentRes.maincontent.id,
                         layout: {
                             align: 'stretch',
                             type: 'fit'
                         },
                         flex: 1
                     },
                    {
                        xtype: 'container',
                        id: 'SideBar',
                        width: 210,
                        layout: {
                            align: 'stretch',
                            type: 'vbox'
                        },
                        items: [
                            {
                                xtype: 'button',
                                toggleGroup: contentRes.maincontent.sidebar.group,
                                enableToggle: true,
                                pressed: true,
                                text: 'Country',
                                handler: function () {
                                    navigateTo(window.res.link.country);
                                }
                            },
                            {
                                xtype: 'button',
                                toggleGroup: contentRes.maincontent.sidebar.group,
                                enableToggle: true,
                                text: 'Region'

                            },
                            {
                                xtype: 'button',
                                id: window.res.content.maincontent.sidebar.district,
                                toggleGroup: contentRes.maincontent.sidebar.group,
                                enableToggle: true,
                                text: 'District',
                                handler: function () {
                                    navigateTo(window.res.link.district);
                                }
                            },
                            {
                                xtype: 'button',
                                toggleGroup: contentRes.maincontent.sidebar.group,
                                enableToggle: true,
                                text: 'Outpost'
                            }
                        ]
                    }

                ]

            }
        );

    });
</script>
