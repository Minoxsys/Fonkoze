        function GenerateChartStoreData() {
            storeFields = [];
            dataStore = [];

            storeFields.push({ name: 'DistrictName' });
            storeFields.push({ name: 'ProductsUnderTresholdNo', type: 'int' });

            productFields.forEach(function (entry) {
