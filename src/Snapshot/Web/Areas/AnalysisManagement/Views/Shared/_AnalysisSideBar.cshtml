@using Web.Areas.AnalysisManagement.Controllers;
@using Web.Areas.AnalysisManagement;

<script type="text/javascript">
    window.res.content.maincontent = {
        id: 'MainContent',
        sidebar: {
            id: 'SideBar',
            group: 'SideBarGroup',
            reportregionlevel: 'Sidebar-AnalysisAdministration-Report-Region-Level-Button',
            reportdistrictlevel: 'Sidebar-AnalysisAdministration-Report-District-Level-Button',
            reportsellerlevel: 'Sidebar-AnalysisAdministration-Report-Seller-Level-Button'
            //locationreport: 'Sidebar-AnalysisAdministration-Location-Report-Button'
        }
    };

    
    window.res.link.reportregionlevel = '@(Url.RouteUrl<ReportRegionLevelController>(x=>x.Overview(null),AnalysisManagementAreaRegistration.DEFAULT_ROUTE))';
    window.res.link.reportdistrictlevel = '@(Url.RouteUrl<ReportDistrictLevelController>(x=>x.Overview(null),AnalysisManagementAreaRegistration.DEFAULT_ROUTE))';
    window.res.link.reportsellerlevel = '@(Url.RouteUrl<ReportOutpostLevelController>(x=>x.Overview(null),AnalysisManagementAreaRegistration.DEFAULT_ROUTE))';
    @*window.res.link.locationreport = '@(Url.RouteUrl<LocationReportController>(x=>x.Overview(),AnalysisManagementAreaRegistration.DEFAULT_ROUTE))';*@
   
    Ext.onReady(function () {

        var contentRes = window.res.content;

        var content = Ext.getCmp(contentRes.id);

        content.add({
            xtype: 'container',
            layout: {
                align: 'stretch',
                type: 'hbox'
            },
            items: [{
                xtype: 'container',
                id: contentRes.maincontent.id,
                layout: {
                    align: 'stretch',
                    type: 'fit'
                },
                flex: 1
            }, {
                xtype: 'container',
                id: 'SideBar',
                width: 230,
                layout: {
                    align: 'stretch',
                    type: 'vbox'
                },
                items: [
                {
                    xtype: 'button',
                    id: contentRes.maincontent.sidebar.reportregionlevel,
                    toggleGroup: contentRes.maincontent.sidebar.group,
                    enableToggle: true,
                    text: 'Product level information at <br/> region level',
                    height: 45,
                    margin: '45 20 0 0',
                    ui: 'snapshot-sidebar-btn',
                    handler: function () {
                        navigateTo(window.res.link.reportregionlevel);
                        }
                },
                 {
                    xtype: 'button',
                    id: contentRes.maincontent.sidebar.reportdistrictlevel,
                    toggleGroup: contentRes.maincontent.sidebar.group,
                    text: 'Product level information at <br/> district level',
                    height: 45,
                    margin: '0 20 0 0',
                    ui: 'snapshot-sidebar-btn',
                    handler: function () {
                        navigateTo(window.res.link.reportdistrictlevel);
                    },
                    enableToggle: true
                }, {
                    xtype: 'button',
                    id: contentRes.maincontent.sidebar.reportsellerlevel,
                    toggleGroup: contentRes.maincontent.sidebar.group,
                    text: 'Product level information at <br/> seller level',
                    height: 45,
                    margin: '0 20 0 0',
                    ui: 'snapshot-sidebar-btn',
                    handler: function () {
                        navigateTo(window.res.link.reportsellerlevel);
                    },
                    enableToggle: true
                }]
            }]

        });

    });
</script>
