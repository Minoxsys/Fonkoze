@using Web.Areas.AnalysisManagement.Controllers;
@using Web.Areas.AnalysisManagement;

<script type="text/javascript" />
    window.res.content.maincontent = {
        id: 'MainContent',
        sidebar: {
            id: 'SideBar',
            group: 'SideBarGroup',
            reportproductlevel: 'Sidebar-AnalysisAdministration-Report-Region-Level-Button',
            @*reportdistrictlevel: 'Sidebar-AnalysisAdministration-Report-District-Level-Button',
            activityreport: 'Sidebar-AnalysisAdministration-Activity-Report-Button',
            excesslevels: 'Sidebar-AnalysisAdministration-Excess-Levels-Report-Button',*@
            locationreport: 'Sidebar-AnalysisAdministration-Location-Report-Button'
        }
    };

    window.res.link.reportproductlevel = '@(Url.RouteUrl<ReportRegionLevelController>(x=>x.Overview(),AnalysisManagementAreaRegistration.DEFAULT_ROUTE))';
    @*window.res.link.reportdistrictlevel = '@(Url.RouteUrl<ReportDistrictLevelController>(x=>x.Overview(),AnalysisManagementAreaRegistration.DEFAULT_ROUTE))';*@
    window.res.link.locationreport = '@(Url.RouteUrl<LocationReportController>(x=>x.Overview(),AnalysisManagementAreaRegistration.DEFAULT_ROUTE))';
   
    Ext.onReady(function () {

        var contentRes = window.res.content;

        var content = Ext.getCmp(contentRes.id);

        content.add({
            xtype: 'container',
            layout: {
                align: 'stretch',
                type: 'hbox'
            },
            items: [{
                xtype: 'container',
                id: contentRes.maincontent.id,
                layout: {
                    align: 'stretch',
                    type: 'fit'
                },
                flex: 1
            }, {
                xtype: 'container',
                id: 'SideBar',
                width: 230,
                layout: {
                    align: 'stretch',
                    type: 'vbox'
                },
                items: [{
                    xtype: 'button',
                    id: contentRes.maincontent.sidebar.reportproductlevel,
                    toggleGroup: contentRes.maincontent.sidebar.group,
                    enableToggle: true,
                    text: 'Product level information',
                    height: 45,
                    margin: '45 20 0 0',
                    ui: 'snapshot-sidebar-btn',
                    handler: function () {
                        navigateTo(window.res.link.reportproductlevel);
                    }
                }, {
                    xtype: 'button',
                    id: window.res.content.maincontent.sidebar.locationreport,
                    toggleGroup: contentRes.maincontent.sidebar.group,
                    height: 45,
                    margin: '0 20 0 0',
                    text: 'Location Report',
                    ui: 'snapshot-sidebar-btn',
                    handler: function () {
                        navigateTo(window.res.link.locationreport);
                    },
                    enableToggle: true
                }]
            }]

        });

    });
</script>
