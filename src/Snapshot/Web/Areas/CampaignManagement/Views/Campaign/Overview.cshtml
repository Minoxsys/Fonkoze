                                text: 'Selected'
                            }]
                        }]
                    },{
                        xtype: 'container',
                        flex: 1,
                        layout: {
                            type: 'vbox',
                            align: 'center'
                        },

                        items: [{
                            xtype: 'container',
                            flex: 1,
                            layout: {
                                type: 'vbox',
                                pack: 'center',
                            },
                            items: [{
                                xtype: 'button',
                                margin: '0 0 5 0',
                                width: 80,
                                text: 'Add',
                                handler: function () {
                                    var gridRight = me.down('#'+window.feature.rightGrid);
                                    var gridLeft = me.down('#'+window.feature.leftGrid);

                                    var gridLeftStore = me.down('#'+window.feature.leftGrid).getStore();
                                    gridLeftStore.each(function (record) {
                                        if (record.dirty){
                                            var newValue = {
                                                Id: record.get('Id'), 
                                                Name: record.get('Name'),
                                            };
                                            var contains = RightGridContains(me, newValue, gridRight);
                                            if (contains == false){
                                                window.feature.rightGridStore.insert(0, newValue);
                                            }
                                        }
                                    });

                                }
                            },{
                                xtype: 'button',
                                width: 80,
                                text: 'Remove',
                                handler: function () {
                                    var rightGridStore = me.down('#'+window.feature.rightGrid).getStore();
                                    rightGridStore.each(function (record) {
                                        if (record.dirty){
                                            rightGridStore.remove(record);
                                        }
                                    });
