            }]
        });

        window.feature.wizardGridManagementContainer =  Ext.define('MyApp.view.ui.MyContainer', {
            extend: 'Ext.container.Container',
            flex: 1,
            margin: '20 0 0 20',
            layout: {
                type: 'hbox',
