            store: window.feature.campaignStore,
            flex: 3,
            disableSelection: true,
            loadMask: true,
            columns: [{
                text: "Campaign Name",
                dataIndex: 'Name',
                sortable: true,
                flex: 1
            }, {
                text: "Start Date",
                dataIndex: 'StartDate',
                sortable: true,
                flex: 1
            }, {
                text: "End Date",
                dataIndex: 'EndDate',
                sortable: true,
                flex: 1
            }, {
                text: "Creation Date",
                dataIndex: 'CreationDate',
                sortable: true,
                flex: 1
            }, {
                xtype: 'actioncolumn',
                text: 'Actions',
                flex: 1,
