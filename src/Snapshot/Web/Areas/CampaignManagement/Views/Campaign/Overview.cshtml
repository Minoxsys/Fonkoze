            }]
        });

        window.feature.wizardCampaignManagementContainer = Ext.define('MyApp.view.ui.MyContainer', {
            extend: 'Ext.container.Container',
            flex: 1,
            margin: '20 0 0 20',
            layout: {
                type: 'hbox',
                align: 'stretch'
            },
            items: [{
                xtype: 'container',
                flex: 1,
                layout: {
                    type: 'vbox',
