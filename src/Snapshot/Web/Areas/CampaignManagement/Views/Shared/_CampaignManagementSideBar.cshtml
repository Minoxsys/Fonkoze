    Ext.onReady(function () {

        var contentRes = window.res.content;

        var content = Ext.getCmp(contentRes.id);

        content.add(
            {
                xtype: 'container',
                layout: {
                    align: 'stretch',
                    type: 'hbox'
                },
                items: [
                     {
                         xtype: 'container',
                         id: contentRes.maincontent.id,
                         layout: {
                             align: 'stretch',
                             type: 'fit'
                         },
                         flex: 1
                     },
                    {
                        xtype: 'container',
                        id: 'SideBar',
                        width: 210,
                        layout: {
                            align: 'stretch',
                            type: 'vbox'
                        },
                        items: [
                            {
                                xtype: 'label',
                                text: 'Requests',
                            },
                            {
                                xtype: 'button',
                                id: contentRes.maincontent.sidebar.smsRequest,
                                toggleGroup: contentRes.maincontent.sidebar.group,
                                text: 'SMS Request Schedule',
                                icon: '@(Url.RouteUrl<Web.Controllers.AssetsController>(it => it.Shared("/img/arrow.gif"), Web.Bootstrap.Routes.AssetRoutesRegistrar.SHARED))',
