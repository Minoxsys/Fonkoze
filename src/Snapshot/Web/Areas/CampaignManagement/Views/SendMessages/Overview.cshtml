                                        var gridLeftStore = window.feature.topContainer.down('#' + window.feature.leftGrid).getStore();
                                        gridLeftStore.each(function (record) {
                                            if (record.dirty) {
                                                var newValue = {
                                                    Id: record.get('Id'),
                                                    Name: record.get('Name')
                                                };
                                                var contains = RightGridContains(newValue, gridRight);
                                                if (contains == false) {
